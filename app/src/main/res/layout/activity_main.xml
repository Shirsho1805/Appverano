<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/Negromialma"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Hi Score:"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@color/Blancarosa"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/Azulvergas"
        />
    <TextView
        android:id="@+id/txt_2048"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2048"
        android:textSize="80dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.283"
        app:layout_editor_absoluteX="16dp"
        android:textColor="@color/Azulito"
        />
    <Button
        android:id="@+id/txt_startgame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_2048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Start Game"
        android:textSize="40dp"
        android:padding="30dp"
        android:textColor="@color/Azulvergas"
        android:background="@color/Azulbajo"
        android:textStyle="bold"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
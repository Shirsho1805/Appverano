<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:weightSum="10"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@color/Negromialma">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="10"
        android:layout_marginTop="25dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2048"
            android:textSize="50sp"
            android:layout_weight="2"
            android:layout_centerInParent="true"
            android:textColor="@color/Azulito"
            />
        <Button
            android:id="@+id/scoreBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Score\n0"
            android:layout_margin="5dp"
            android:textColor="@color/Azulvergas"
            android:background="@color/AzulEduardo"/>
        <Button
            android:id="@+id/bestBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Beat\n0"
            android:layout_margin="5dp"
            android:textColor="@color/Azulvergas"
            android:background="@color/AzulEduardo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Join the numbers and get to the"
            android:textSize="16dp"
            android:padding="5dp"
            android:textColor="@color/Azulbajo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2048! tile"
            android:fontFamily="cursive"
            android:textSize="18dp"
            android:padding="5dp"
            android:textColor="@color/Blancarosa"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/restartBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESTART"
            android:textSize="25dp"
            android:textAlignment="textStart"
            android:layout_weight="1"
            android:textColor="@color/Blancarosa"
            android:background="@color/Azulvergas"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6">
        <TextView
            android:id="@+id/gameOver"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="GAME OVER"
            android:textSize="60dp"
            android:gravity="center"
            android:elevation="8dp"
            android:visibility="invisible"
            android:background="@color/Azulvergas"
            android:textColor="@color/Blancarosa"/>
        <GridLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:alignmentMode="alignMargins"
            android:columnCount="4"
            android:columnOrderPreserved="true"
            android:rowCount="4"
            android:padding="14dp"
            android:visibility="visible"
            android:background="@color/Azulito">
            <!-- ROW 1 -->
            <Button
            android:id="@+id/game_0_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:background="@android:color/white"
            android:text="2"
            android:textSize="30dp"
            android:textColor="@color/Azulvergas"
            />
            <Button
                android:id="@+id/game_0_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@android:color/white"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/Azulvergas"
                />
            <Button
                android:id="@+id/game_0_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@android:color/white"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/Azulvergas"
                />
            <Button
                android:id="@+id/game_0_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@android:color/white"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/Azulvergas"
                />
            <!-- ROW 2-->
            <Button
                android:id="@+id/game_1_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@android:color/white"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/Azulvergas"
                />
            <Button
                android:id="@+id/game_1_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@android:color/white"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/Azulvergas"
                />
            <Button
                android:id="@+id/game_1_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@android:color/white"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/Azulvergas"
                />
            <Button
                android:id="@+id/game_1_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@android:color/white"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/Azulvergas"
                />
            >-- ROW3-->
            <Button
                android:id="@+id/game_2_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@android:color/white"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/Azulvergas"
                />
            <Button
                android:id="@+id/game_2_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@android:color/white"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/Azulvergas"
                />
            <Button
                android:id="@+id/game_2_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@android:color/white"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/Azulvergas"
                />
            <Button
                android:id="@+id/game_2_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@android:color/white"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/Azulvergas"
                />
            <!-- ROW4-->
            <Button
                android:id="@+id/game_3_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@android:color/white"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/Azulvergas"
                />
            <Button
                android:id="@+id/game_3_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@android:color/white"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/Azulvergas"
                />
            <Button
                android:id="@+id/game_3_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@android:color/white"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/Azulvergas"
                />
            <Button
                android:id="@+id/game_3_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@android:color/white"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/Azulvergas"
                />
    </GridLayout>
    </FrameLayout>

</LinearLayout>